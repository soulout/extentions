{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"short_name": "LanguageTool",
	"description": "__MSG_appDesc__",
	"version": "2.2.3",
	"default_locale": "en",
	"author": "LanguageTooler GmbH",
	"homepage_url": "https://languagetoolplus.com",

	"applications": {
		"gecko": {
			"strict_min_version": "60.0"
		}
	},

	"icons": {
		"16": "assets/images/icons/icon16.png",
		"32": "assets/images/icons/icon32.png",
		"48": "assets/images/icons/icon48.png",
		"64": "assets/images/icons/icon64.png",
		"128": "assets/images/icons/icon128.png"
	},
	"permissions": [
		"activeTab",
		"storage",
		"contextMenus"
	],
	"background": {
		"scripts": [
			"common/browser-polyfill.min.js",
			"common/purify.min.js",
			"config/config.js",
			"config/languages.js",
			"common/browserDetector.js",
			"common/utils.js",
			"common/eventBus.js",
			"common/storageController.js",
			"common/tracker.js",
			"common/tweaksManager.js",
			"background/validator.js",
			"background/main.js"
		]
	},
	"content_scripts": [
		{
			"all_frames": true,
			"match_about_blank": true,
			"js": [
				"common/browser-polyfill.min.js",
				"common/purify.min.js",
				"config/config.js",
				"config/languages.js",
				"common/browserDetector.js",
				"common/utils.js",
				"common/eventBus.js",
				"common/storageController.js",
				"common/tracker.js",
				"common/tweaksManager.js",
				"common/domMeasurement.js",
				"content/debounce.js",
				"content/domWalker.js",
				"content/requestStatus.js",
				"content/ceElementInspector.js",
				"content/inputAreaWrapper.js",
				"content/mirror.js",
				"content/highlighter.js",
				"content/toolbar.js",
				"content/dialog.js",
				"content/errorCard.js",
				"content/ltAssistant.js",
				"content/main.js",
				"privacyConfirmationDialog/privacyConfirmationDialog.js"
			],
			"matches": [
				"http://*/*", "https://*/*", "file:///*"
			],
			"run_at": "document_end"
		},
		{
			"all_frames": true,
			"match_about_blank": true,
			"css": [
				"common/fonts.css",
				"content/styles.css"
			],
			"matches": [
				"http://*/*", "https://*/*", "file:///*"
			],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": false,
		"open_in_tab": true
	},
	"browser_action": {
		"default_icon": "assets/images/icons/icon16.png",
		"default_title": "LanguageTool",
		"default_popup": "popup/popup.html"
	},
	"web_accessible_resources": [
		"https://api.languagetool.org",
		"assets/fonts/*.woff2",
		"assets/styles/*",
		"content/*.css",
		"content/iframes/rating/*.html",
		"content/iframes/premiumErrors/*.html",
		"content/iframes/historicPremiumErrors/*.html",
		"assets/images/*"
	]
}